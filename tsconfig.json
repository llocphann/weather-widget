{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "paths": {
      "*": ["node_modules/*", "src/ui/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "src/types/*", "**/*.ts", "**/*.tsx"]
}
